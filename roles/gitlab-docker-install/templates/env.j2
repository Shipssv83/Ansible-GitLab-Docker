# GitLab settings
GITLAB_HOSTNAME={{ fqdn }}
GITLAB_SSH_HOSTNAME={{ gitlab_ssh_host_name }}
GITLAB_EXTERNAL_URL=https://{{ fqdn }}
GITLAB_SSH_PORT={{ ssh_port }}
HTTP_PORT={{ http_port }}
HTTPS_PORT={{ https_port }}
GITLAB_HTTP_PORT=8080
GITLAB_HTTPS_PORT=8443
GITLAB_EMAIL_FROM=gitlab@{{ fqdn }}
GITLAB_EMAIL_REPLY_TO=no-reply@{{ fqdn }}
GITLAB_ROOT_PASS={{ gitlab_root_password }}
GITLAB_VERSION={{ gitlab_docker_version }}
NGINX_VERSION=latest
REDIS_VERSION=latest
TIME={{ timezone }}

# PostgreSQL settings
POSTGRES_VERSION=14.11
POSTGRES_USER={{ git_pos_user }}
POSTGRES_PASSWORD={{ git_pos_pass }}
POSTGRES_DB={{ git_pos_db }}

# SMTP settings
SMTP_ADDRESS={{ smtp }}
SMTP_PORT={{ smtp_port }}
# SMTP_USERNAME=username
# SMTP_PASSWORD=yourpassword
SMTP_DOMAIN={{ smtp_domain }}
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_TLS=false
SMTP_OPENSSL_VERIFY_MODE=none

# GITLAB_RUNNER
GITLAB_RUNNER_VERSION=latest
GITLAB_URL=http://gitlab:80/
GITLAB_RUNNER_REGISTRATION_TOKEN={{ registrattion_token }}
GITLAB_RUNNER_DOCKER_IMAGE=docker:stable
GITLAB_RUNNER_DESCRIPTION=docker-runner
GITLAB_RUNNER_TAG_LIST=docker

# BACKUP
BACKUP_IMAGE_TAG=alpine:latest